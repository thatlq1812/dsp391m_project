# Environment Configuration Template
# Copy this file to .env and fill in your values

# Project Environment
PROJECT_ENV=production  # or development
TIMEZONE=Asia/Ho_Chi_Minh

# Google Maps API (optional - leave empty to use mock API)
GOOGLE_MAPS_API_KEY=

# OpenWeather API (optional)
OPENWEATHER_API_KEY=

# Data Storage
DATA_DIR=./data
LOGS_DIR=./logs
CACHE_DIR=./cache
MODELS_DIR=./models

# Database
DB_PATH=./traffic_history.db
DB_RETENTION_DAYS=7

# Scheduler
SCHEDULER_MODE=adaptive  # or fixed
ENABLE_SCHEDULER=true

# Monitoring
ENABLE_MONITORING=true
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR

# Performance
MAX_WORKERS=4
TIMEOUT_SECONDS=30

# Features
USE_MOCK_API=true  # Set false for production with real API
ENABLE_HISTORY=true
ENABLE_VISUALIZATION=true

# Costs (for reference only)
ESTIMATED_MONTHLY_COST_USD=720  # With real API, 64 nodes, adaptive scheduling
