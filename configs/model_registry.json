{
  "models": [
    {
      "key": "stmgt",
      "display_name": "STMGT (Hybrid Graph + Transformer)",
      "description": "Hybrid ASTGCN + Transformer backbone with Gaussian mixture output (K=3).",
      "tags": [
        "traffic",
        "stmgt",
        "probabilistic"
      ],
      "train": {
        "script": "scripts/training/train_stmgt.py",
        "config": {
          "model": {
            "num_nodes": 62,
            "hidden_dim": 64,
            "num_heads": 4,
            "num_blocks": 2,
            "mixture_components": 3,
            "seq_len": 12,
            "pred_len": 12
          },
          "training": {
            "batch_size": 32,
            "learning_rate": 0.001,
            "max_epochs": 100,
            "patience": 20,
            "weight_decay": 0.0001,
            "drop_edge_p": 0.2,
            "num_workers": 0,
            "use_amp": true,
            "accumulation_steps": 1,
            "data_source": "all_runs_extreme_augmented.parquet"
          }
        }
      },
      "hyperparameters": [
        {
          "key": "model.hidden_dim",
          "type": "int_slider",
          "label": "Hidden Dimension",
          "group": "Model",
          "min": 32,
          "max": 128,
          "step": 16,
          "default": 64
        },
        {
          "key": "model.num_heads",
          "type": "select",
          "label": "Attention Heads",
          "group": "Model",
          "options": [
            2,
            4,
            8
          ],
          "default": 4
        },
        {
          "key": "model.num_blocks",
          "type": "select",
          "label": "ST Blocks",
          "group": "Model",
          "options": [
            1,
            2,
            3,
            4
          ],
          "default": 2
        },
        {
          "key": "model.mixture_components",
          "type": "select",
          "label": "GMM Components (K)",
          "group": "Model",
          "options": [
            2,
            3,
            4,
            5
          ],
          "default": 3
        },
        {
          "key": "training.batch_size",
          "type": "select",
          "label": "Batch Size",
          "group": "Training",
          "options": [
            16,
            32,
            64,
            128
          ],
          "default": 32
        },
        {
          "key": "training.learning_rate",
          "type": "select",
          "label": "Learning Rate",
          "group": "Training",
          "options": [
            0.0001,
            0.0005,
            0.001,
            0.005
          ],
          "default": 0.001
        },
        {
          "key": "training.max_epochs",
          "type": "int_slider",
          "label": "Max Epochs",
          "group": "Training",
          "min": 10,
          "max": 200,
          "step": 10,
          "default": 100
        },
        {
          "key": "training.patience",
          "type": "int_slider",
          "label": "Early Stopping Patience",
          "group": "Training",
          "min": 5,
          "max": 50,
          "step": 5,
          "default": 20
        },
        {
          "key": "training.data_source",
          "type": "dataset_select",
          "label": "Training Dataset",
          "group": "Data",
          "default": "all_runs_extreme_augmented.parquet"
        }
      ]
    }
  ]
}
